{
  "name": "@hhm1999/x-components",
  "main": "dist/x-components.umd.min.js",
  "description": "基于Vue的组件库",
  "version": "0.4.5",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build-components": "vue-cli-service build --target lib --name x-components ./components/index.js",
    "build-examples": "vue-cli-service build --dest docs",
    "start-docs": "serve docs",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "test:e2eheadless": "vue-cli-service test:e2e --headless",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "async-validator": "^3.5.2",
    "axios": "^0.21.1",
    "core-js": "^3.6.5",
    "fine-uploader": "^5.16.2",
    "highlight.js": "^10.5.0",
    "lodash": "^4.17.15",
    "medium-editor": "^5.23.3",
    "moment": "^2.24.0",
    "rgb-hex": "^4.0.0",
    "vue": "^2.6.11",
    "vue-color": "^2.8.1",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@hhm1999/vue-markdown-loader": "^1.1.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-e2e-cypress": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/test-utils": "^1.0.3",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "jquery": "^3.5.1",
    "mockjs": "^1.0.1-beta3",
    "node-sass": "^5.0.0",
    "sass": "^1.30.0",
    "sass-loader": "^10.1.0",
    "serve": "^11.3.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintIgnore": [
    "/src/assets/**/*.js",
    "/dist/**/*.js",
    "/examples/docs/**/*.vue",
    "/examples/**/*.md",
    "/components/assets/**/*.js"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "plugin:vue/strongly-recommended",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-console": "off",
      "no-irregular-whitespace": "error",
      "no-extra-semi": "error",
      "no-multi-spaces": [
        "error",
        {
          "ignoreEOLComments": false
        }
      ],
      "func-call-spacing": [
        "error",
        "never"
      ],
      "computed-property-spacing": [
        "error",
        "never"
      ],
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "key-spacing": "error",
      "no-trailing-spaces": "error",
      "vue/attribute-hyphenation": "off",
      "vue/singleline-html-element-content-newline": "off",
      "vue/html-self-closing": "off",
      "vue/max-attributes-per-line": "off",
      "vue/name-property-casing": "off",
      "vue/require-prop-types": "off",
      "vue/html-quotes": [
        "error",
        "double"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
